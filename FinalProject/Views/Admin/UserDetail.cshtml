            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditUser" asp-route-id="@Model.UserId">Edit</a> |
    <a asp-action="DeleteUser" asp-route-id="@Model.UserId">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
